ver=2.15.0

[deps]
libdrm
libglvnd
meson
ninja
xorg-libxfixes

[srcs]
https://github.com/intel/libva/archive/%ver/%name-%ver.tar.gz

[build]
meson setup build %name-%ver \
	 --buildtype=plain \
	 --wrap-mode nodownload \
	 -D b_pie=true
meson compile -C build -j ${JOBS:-1}
DESTDIR=%dest meson install -C build
chmod -x %dest/include/va/va_vpp.h
